source 'https://rubygems.org'

# Pretty print your Ruby objects with style -- in full color and with proper indentation
gem 'awesome_print'

# table_print turns objects into nicely formatted columns for easy reading
gem "table_print"

# restclient for external api calls
gem 'restclient'

gem 'google-search'

group :development, :test do
  gem 'rspec', '>= 3.3'
  gem 'byebug' # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'pry' # An IRB alternative and runtime developer console
  gem 'pry-rails' # This is a small gem which causes rails console to open pry
  gem 'pry-byebug' # Combine 'pry' with 'byebug'. Adds 'step', 'next', 'finish', 'continue' and 'break' commands to control execution
  gem 'pry-stack_explorer' # pry-stack_explorer is a plugin for the Pry REPL that enables the user to navigate the call-stack.  
end

